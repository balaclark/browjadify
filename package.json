{
  "name": "browjadify",
  "version": "2.1.0",
  "description": "Inject compiled jade templates as functions in browserify modules",
  "keywords": [
    "browserify-transform",
    "jade",
    "browserify"
  ],
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "main": "transform.js",
  "scripts": {
    "lint": "./node_modules/.bin/jshint . --reporter=./node_modules/jshint-full-path/index.js",
    "pretest": "npm run-script lint",
    "test": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- -R spec",
    "posttest": "./node_modules/.bin/istanbul check-coverage && rm -rf coverage",
    "prepublish": "npm test && npm prune"
  },
  "repository": "git@github.com:bengourley/browjadify.git",
  "author": "Ben Gourley",
  "license": "BSD",
  "dependencies": {
    "through": "~2.3.4",
    "falafel": "~0.2.1",
    "escodegen": "0.0.22"
  },
  "devDependencies": {
    "mocha": "~1.9.0",
    "browserify": "~2.13.3",
    "jade": "~0.35.0",
    "jshint-full-path": "^1.1.1",
    "istanbul": "^0.2.9",
    "jshint": "^2.5.0"
  },
  "browser": {
    "./compile.js": "./browser.js"
  }
}
